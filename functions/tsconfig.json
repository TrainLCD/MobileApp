{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
